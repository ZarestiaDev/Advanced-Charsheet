<root>
	<windowclass name="charsheet_actions">
		<script file="campaign/scripts/char_actions.lua" />
		<sheetdata>
			<frame_char name="actionframe">
				<bounds>15,28,-29,-2</bounds>
			</frame_char>
			
			<!-- Add dummy control for Attack Modifiers insertbefore -->
			<genericcontrol name="actions">
				<anchored>
					<top />
					<left />
				</anchored>
				<disabled />
				<invisible />
			</genericcontrol>

			<actions_subwindow name="subspells">
				<class>char_spells</class>
			</actions_subwindow>
			
			<actions_subwindow name="subweapons">
				<class>char_weapons</class>
			</actions_subwindow>
			
			<actions_subwindow name="subitems">
				<class>char_items</class>
			</actions_subwindow>
			
			<actions_subwindow name="subothers">
				<class>char_others</class>
			</actions_subwindow>

			<genericcontrol name="leftanchor">
				<anchored position="insidetopleft" offset="10" />
			</genericcontrol>

			<button_actiontab name="subspells_button">
				<labelres>char_actions_spells</labelres>
			</button_actiontab>
			<button_actiontab name="subweapons_button">
				<labelres>char_actions_weapons</labelres>
			</button_actiontab>
			<button_actiontab name="subitems_button">
				<labelres>char_actions_items</labelres>
			</button_actiontab>
			<button_actiontab name="subothers_button">
				<labelres>char_actions_others</labelres>
			</button_actiontab>
		</sheetdata>
	</windowclass>
	
	<windowclass name="char_spells">
		<script file="campaign/scripts/char_spells.lua" />
		<sheetdata>		
			<sub_actions_subwindow name="spells">
				<class>char_spells_details</class>
			</sub_actions_subwindow>
			<scrollbar>
				<anchored to="spells" />
				<target>spells</target>
			</scrollbar>

			<button_expand name="expand">
				<anchored position="insidebottomleft" offset="15,15" width="20" height="20" />
				<target>spells,spellclasslist,levels,spells</target>
				<togglelevel>3</togglelevel>
			</button_expand>
			<button_collapse name="collapse">
				<anchored position="insidebottomleft" offset="45,15" width="20" height="20" />
				<target>spells,spellclasslist,levels,spells</target>
				<togglelevel>3</togglelevel>
			</button_collapse>

			<label name="label_mode">
				<anchored position="insidebottomleft" offset="80,15" />
				<static textres="spell_label_mode" />
			</label>
			<button_stringcycler name="spellmode">
				<anchored to="label_mode" position="righthigh" offset="10,0" width="80" />
				<parameters>
					<labelsres>spell_label_modeprep|spell_label_modecombat</labelsres>
					<values>preparation|combat</values>
					<defaultlabelres>spell_label_modestd</defaultlabelres>
				</parameters>
				<script>
					function onValueChanged()
						window.onModeChanged();
					end
				</script>
			</button_stringcycler>

			<button_iedit name="spells_iedit">
				<anchored position="insidebottomright" offset="25,15" />
				<tooltip textres="char_tooltip_actionedit" />
				<script>
					function onValueChanged()
						local bEditMode = (getValue() == 1);
						
						window.label_mode.setVisible(not bEditMode);
						window.spellmode.setVisible(not bEditMode);
						if bEditMode then
							DB.setValue(window.getDatabaseNode(), "spellmode", "string", "standard");
						end
						window.spells.subwindow.update();
					end
				</script>
			</button_iedit>
			<buttoncontrol name="spellclass_iadd">
				<anchored to="spells_iedit" position="lefthigh" offset="5,0" width="20" height="20" />
				<icon normal="button_star" pressed="button_star_down" />
				<tooltip textres="char_tooltip_actionaddspellclass" />
				<script>
					function onButtonPress()
						window.spells.subwindow.addSpellClass();
					end
				</script>
			</buttoncontrol>
		</sheetdata>
	</windowclass>

